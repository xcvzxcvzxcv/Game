Buttons
*TEMPLATE
		class:buildingfon 
		tag:items

	*manastore
		name: Mana bottle
		cost:50 gold
		on tick:increase cost of this by 4*(natureyield+wateryield+rockyield)
		on tick:
		if (have storeup1)
		multiply cost of this by 0.9
		end
		end
		icon:buildings[0,6]
		text:Mana bottle — [mana]
		desc:Refills fairy's mana, allowing her to continue work. Price depends on the power of your fairies.
		on click:
		manacost is 4*(natureyield+wateryield+rockyield)+50
		if (have storeup1) manacost is 0.9*(4*(natureyield+wateryield+rockyield)+50)		
		if (gold>=manacost)
		yield 1 mana
		yield 1 manacount
		lose manacost gold
		else
		toast Not enough gold to buy mana.
		end
		end
		end

	*silverspherestore
		name: Silver Sphere
		text:Silver Sphere — [silversphere]
		desc:Allows you to capture a fairy below 20 lvl. Price depends of the amount of fairies.
		icon:buildings[1,5]
		on tick:multiply cost of this by (fairies+1)
		on tick:
		if (have storeup1) multiply cost of this by 0.9
		end
		cost:100 gold
		on click:
		$silverspherecost is 100*(fairies+1)
		if (have storeup1) $silverspherecost is 0.9*$silverspherecost
		if (gold>=$silverspherecost)
		yield 1 silversphere
		lose $silverspherecost gold
		end 
		end 

	*goldenspherestore
		name:Golden Sphere
		text:Golden Sphere — [goldensphere]
		desc:Allows you to capture a fairy below 40 lvl.<//>
		icon:buildings[2,5]
		cost:50000 gold
		on tick:multiply cost of this by (fairies+1)
		on tick:
		if (have storeup1) multiply cost of this by 0.9
		end
		on click:
		$goldenspherecost is 50000*(fairies+1)
		if (have storeup1) $goldenspherecost is 0.9*$goldenspherecost
		if (gold>=$goldenspherecost)
		yield 1 goldensphere
		lose $goldenspherecost gold
		end 
		end 

	*crystalspherestore
		name:Crystal Sphere 
		text:Crystal Sphere  — [crystalsphere]
		desc:Allows you to capture a fairy above 40 lvl.<//>
		icon:buildings[3,5]
		cost:500000 gold
		on tick:multiply cost of this by (fairies+1)
		on tick:
		if (have storeup1) multiply cost of this by 0.9
		end
		on click:
		$crystalspherecost is 500000*(fairies+1)
		if (have storeup1) $crystalspherecost is 0.9*$crystalspherecost
		if (gold>=$crystalspherecost)
		yield 1 crystalsphere
		lose $crystalspherecost gold
		end 
		end 

	*goldencarrotstore
		name:Golden Carrot
		text:Golden Carrot  — [goldencarrot]
		desc:Instantly gives a fairy +1 level. Cost depends on your fairies' levels.
		icon:buildings[0,5]
		cost:100 gold
		on tick:multiply cost of this by sumlevel
		on tick:
		if (have storeup1) multiply cost of this by 0.9
		end
		on click:
		$goldcarcost is 100*sumlevel
		if (have storeup1) $goldcarcost is 0.9*$goldcarcost
		if (gold>=$goldcarcost)
		yield 1 goldencarrot
		lose $goldcarcost gold
		end 
		end 

	*evolvenaturestore
		text:Elemental Stone of Nature
		desc:Evolves Pfoe into Taze or Tinefol into Tinerog
		icon:buildings[3,6]

	*evolveairstore
		text:Elemental Stone of Air
		desc:Evolves Tinefol into Tineves
		icon:buildings[1,6]
		req:gold:ps>1000000000000000

	*evolvefirestore
		text:Elemental Stone of Fire
		desc:Evolves Flagwin into Dracwin or Tinefol into Tinezard
		icon:buildings[2,6]
		req:gold:ps>1000000000000000

	*dwarvestoolsstore
		text:Tools of the Dwarves
		desc:Evolves Minari into Megari and finally to Gigarex
		icon:buildings[4,5]
		req:gold:ps>1000000000000000

